{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "providers": ["nodejs"],
      "phases": {
        "setup": {
          "nixPkgs": ["python3", "gcc", "g++", "make", "pkg-config"]
        },
        "install": {
          "cmds": [
            "rm -rf node_modules client/node_modules 2>/dev/null || true",
            "npm cache clean --force 2>/dev/null || true",
            "npm install --production=false --no-optional --prefer-offline",
            "cd client && rm -f package-lock.json && npm install --legacy-peer-deps --prefer-offline"
          ]
        },
        "build": {
          "cmds": [
            "cd client && npm run build",
            "rm -rf public/* && cp -r client/build/* public/"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "node server-minimal.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100
  }
}
